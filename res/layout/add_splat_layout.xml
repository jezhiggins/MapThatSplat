<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <FrameLayout
       	android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="0.5">
     <LinearLayout 
		android:id="@+id/location"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <TextView
	        android:text="Where was the splat?"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="16dp"
	        style="?android:attr/textAppearanceLarge"/>
	      <org.osmdroid.views.MapView
	         android:id="@+id/mapview"
	         android:layout_width="match_parent"
	         android:layout_height="0dip"
	         android:layout_weight="0.5"
	         android:clickable="true"
	         android:enabled="true" />
	  </LinearLayout>
	  <LinearLayout
	      android:id="@+id/choosephoto"  
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:orientation="vertical"
          android:padding="6dp"
	      android:weightSum="2">
	    <TextView
	        android:text="Upload an Image!"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="16dp"
	        style="?android:attr/textAppearanceLarge"/>
	    <Button
        android:id="@+id/takephoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Take a Photo"
        android:textSize="25sp"/>
	    <Button
	        android:id="@+id/usephoto"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dp"
	        android:text="Choose an Existing Photo"
	        android:textSize="25sp" />
	    <ImageView 
	        android:id="@+id/splatograph"
	        android:layout_width="match_parent"
	        android:layout_height="0dip" 
	        android:layout_weight="1.0"/>
	  </LinearLayout>
	  <LinearLayout 
	      android:id="@+id/chooseanimal"  
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:orientation="vertical" >
	    <TextView
	        android:text="What Animal?"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="16dp"
	        style="?android:attr/textAppearanceLarge" />
	   	<Spinner
	     		 android:id="@+id/animal_choice"
	     		 android:layout_width="match_parent"
	     		 android:layout_height="wrap_content" />
	    <EditText
	            android:id="@+id/customanimal"
	            android:inputType="textCapWords|textAutoCorrect"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="16sp"
	            android:hint="Enter Other Animal:"/> 
	    </LinearLayout>
	    <LinearLayout 
	      android:id="@+id/upload"  
	      android:layout_width="match_parent"
	      android:layout_height="match_parent">

	    <TextView
	        android:text="Upload!"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="16dp"
	        style="?android:attr/textAppearanceLarge"/>
	    </LinearLayout>
  </FrameLayout>  
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="left"
        android:orientation="horizontal">    
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Back" />
     <View
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"/>
      <Button
	 	android:id="@+id/findme_btn"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="Find me!"/>  
     <View
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"/>
      <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Next" />
   </LinearLayout>
</LinearLayout>
